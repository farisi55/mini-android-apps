<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.banus.quizbanusalman.Petunjuk">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Petunjuk Mengerjakan Soal" />

        <TextView

            android:id="@+id/soal_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:gravity="fill"
            android:layout_margin="10dp"
            android:text="Jawablah pertanyaan-pertanyaan, kemudian pilih lah yang menurut kamu anggap paling benar. kemudian lihat hasilnya di akhir, Terimaksih."
            android:textSize="7pt" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MULAI BERMAIN"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:onClick="goQuizPertama"/>
    </RelativeLayout>

</LinearLayout>